.playlist
  background-color: #282f31;
  color: #fff

  .playlist__header
    padding: 2px;
    background-color: #373d3f;

  .playlist__title
    font-size: 14px;
    text-align: center;
    margin-bottom 0
    padding 10px 0

  .playlist__tracks
    max-height 400px
    overflow-y auto
    padding: 0;
    margin: 0;
    list-style: none;
    border: 1px solid #373d3f;

    .playlist__track
      padding: 12px
      cursor: pointer

      &-active,&:hover
        color: #8bb955;

    .playlist__track + .playlist__track
      border-top: 1px solid #373d3f;

    .playlist__placeholder
      text-align center
      height 100px
      line-height 70px
      padding 1em

    .playlist__loader
      height 100px
      display flex
      align-items center
      justify-content center
